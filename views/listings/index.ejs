<% layout('layout/boilerplate') %>

<h1 class="mb-4">All Listings</h1>

<div class="row">
  <% for (let listing of allListings) { %>
    <div class="col-md-4 mb-4">
      <div class="card" style="width: 100%;">
        <!-- Image with fallback -->
        <img 
          src="<%= listing.image?.url || listing.image || 'https://via.placeholder.com/600x400?text=No+Image' %>" 
          class="card-img-top" 
          alt="listing image"
        >

        <div class="card-body">
          <h5 class="card-title"><%= listing.title %></h5>
          <p class="card-text">
            <%= listing.description ? listing.description.substring(0, 80) + '...' : 'No description available.' %>
          </p>
          <a href="/listing/<%= listing._id %>" class="btn btn-primary">View Listing</a>
        </div>
      </div>
    </div>
  <% } %>
</div>